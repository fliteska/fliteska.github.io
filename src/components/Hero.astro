---
interface Props {
  title: string;
  img: string;
}
const { title, img } = Astro.props;
import '../styles/global.css'
---

<div class="hero-grid">
  <img class="aspect-[6/2]" src={img} alt="">
  <div class="lg:relative">
    <h3 class="text-3xl lg:text-6xl text-slate-50 leading-tight uppercase font-bold pl-16 p-8">{title}</h3>
    <div class="leading-loose bg-sky-400 shadow pl-16 p-8 lg:w-2/3 lg:absolute lg:bottom-[10%]">
      <p class="text-white text-2xl mb-4">
        <slot />
      </p>
    </div>
  </div>
</div>
<style>
  @reference '../styles/global.css';
  .hero-grid {
    @apply grid;
  }
  .hero-grid img, .hero-grid div {
    grid-column: 1 / 1;
    grid-row: 1 / 1;
  }
</style>